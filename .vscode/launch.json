  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/app.ts",
      "cwd": "${workspaceRoot}",
      "outFiles": [],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test",
      "program": "${workspaceRoot}/tests/node_modules/mocha/bin/_mocha",
      "args": [
        "-t", "19999",
        "-g",
        "chat",
        "built/"
      ],
      "cwd": "${workspaceRoot}/tests",
      "outFiles": [],
      "sourceMaps": true
      // "preLaunchTask": "build:test:debug"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "attach",
      "port": 5858,
      "outFiles": [],
      "sourceMaps": true
    }
  ]
}